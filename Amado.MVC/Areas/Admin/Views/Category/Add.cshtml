@model  AddCategoryViewModel
@{
    ViewData["Title"] = "Admin Add New Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 my-auto">
    <h5>Add Category</h5>
    <form asp-area="Admin" asp-action="Add" asp-controller="Category" method="post">
        <div class="row">
            <div asp-validation-summary="All" class="col-12 mb-3 text-danger">

            </div>
            <div class="col-12 mb-3">
                <input asp-for="CategoryName" type="text" class="form-control" id="categoryName" placeholder="Category Name" value="" required>
            </div>

            <div class="col-12 mb-3">
                <button type="submit" class="btn amado-btn w-100">Add</button>
            </div>
        </div>
    </form>
</div>