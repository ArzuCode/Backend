@model List<BrandDto>
@{
    ViewData["Title"] = "Admin Active Brands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-6 col-md-8">
    <div class="text-danger">
        @if (ViewBag.Error != null)
        {
            <p class="text-danger">ViewBag.Error</p>
        }
    </div>
    <h5 class="mt-3">Brands</h5>
    <div class="amado-btn-group mb-2">
        <a class="btn amado-btn" asp-action="Add"> Add New Brand</a>
        <a class="btn amado-btn" asp-action="GetAllInActive">Inactive Brands</a>
    </div>
    <div>
        @if (ViewBag.Error != null)
        {
            <p class="text-danger">ViewBag.Error</p>
        }
    </div>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var brand in Model)
                {
                    <tr>
                        <td>@brand.Id</td>
                        <td>@brand.BrandName</td>
                        <td class="d-flex p-2">
                            <a class="btn btn-secondary btn-sm" asp-action="Update" asp-route-id="@brand.Id">Update</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        No brand found!
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>