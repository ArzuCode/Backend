@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="col-md-6 my-auto">
    <h1>Login</h1>
    <form asp-action="Login" asp-controller="User" method="post">
        <div class="row">
            <div asp-validation-summary="All" class="col-12 mb-3 text-danger">

            </div>
            <div class="col-12 mb-3">
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email" value="" required>
            </div>
            <div class="col-12 mb-3">
                <input asp-for="Password" type="password" class="form-control mb-3" id="password" placeholder="Password" value="" required>
            </div>
            <div class="col-12 mb-3">
                <div class="custom-control custom-checkbox d-block mb-2">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheckRememberMe">
                    <label class="custom-control-label" for="customCheckRememberMe">Remember Me</label>
                </div>
            </div>
            <div class="col-12 mb-3">
                <button type="submit" class="btn amado-btn w-100">Login</button>
            </div>
        </div>
</form>
</div>
